<style>
    .content {
        height: 80vh;
        /* background-color: yellowgreen; */
        display: flex;
        flex-direction: column;
        justify-content: center;

    }

    .section {
        font-size: 28px;
    }

    ::-webkit-scrollbar-thumb {
        background: #FBA4A4;
        border-radius: 10px;
        margin: 2px;
    }


    .warpper {
        display: flex;

        height: 100vh;
        flex-wrap: wrap;
        justify-content: flex-start;


    }

    .box {
        background: #FBA4A4;
        width: 350px;
        height: 300px;
        margin: 20px 20px;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        display: flex;
        flex-direction: column;
        color: black;

    }
    .lab-img {
        width: 330px;
        height: 200px;
        border-radius: 10px;
        margin: 10px auto;
    }
    a{
        text-decoration: none;
    }
    .title{
        justify-content: flex-start;
        font-size: 24px;
        padding: 10px;
        
        
    }
    .item{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        font-size: 18px ;
        padding: 0 10px;
    }
    .item-left{
        color:green
    }


</style>
@* use with viewbag *@
@functions{
    public dynamic GetObjectValue(object o, string propertyName)
        {
            return o.GetType().GetProperty(propertyName).GetValue(o, null);
        }
}

<link rel="stylesheet" href="~/css/style.css">
<div class="content">
    <div class="section">Lab Rooms<a asp-controller="SelectLab" asp-action="Create" >Create</a></div>
    
    <hr />
    <div class="warpper">
        @foreach (var lab in ViewBag.labTool)
        {
            <a asp-controller="SelectItem" asp-action="Index" asp-route-id="@GetObjectValue(lab,"Id")">
            <div class=box>
                <img class="lab-img" src=\img\Pic.PNG>
                <div class="title">@GetObjectValue(lab,"Name") </div>
                <div class="item">
                    <div class="item-name">@GetObjectValue(lab,"ToolName")</div>
                    <div class="item-left">5/10 available</div>
                </div>
   
            </div>
            </a>

        }
    </div>
</div>
