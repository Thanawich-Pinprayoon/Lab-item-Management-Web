@model LabManage.Models.Blacklist

@{
    ViewData["Title"] = "Delete";
}
<style>
     .content {
        height: 80vh;
        /* background-color: yellowgreen; */
        display: flex;
        flex-direction: column;
        justify-content: center;

    }
    .section {
        display: flex;
        justify-content: space-between;
        font-size: 28px;
    }
    .layout{
        height: 75vh;
        /* background-color: yellowgreen; */
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        min-width: 1080px;
    }
    .title{
        font-size: 20px ;
        font-weight: 800;
    }

    .btn{
        width: 100px;
        height: 30px; 
        font-size: 16px;
        border-radius: 5px;
        background-color: #FB9B9B;
        color: #fdfdfd;
        border: none;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 20px 0 ;
    }

</style>
<div class="content">
    <div class="section">
        <p>Are you sure you want to remove this user from blacklist ?</p>
    </div>
    <hr>
    <div class="layout">
    <dl>
        <dt>
            <p class="title">@Html.DisplayNameFor(model => model.user)</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.user.Name)
        </dd>
        <br/>
        <dt>
            <p class="title">@Html.DisplayNameFor(model => model.reason)</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.reason)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="userID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        @* <a asp-action="Index">Back to List</a> *@
    </form>
</div>
